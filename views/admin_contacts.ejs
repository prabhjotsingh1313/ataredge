<%- include('partials/header', {user: user}) %>

<div class="container">
  <h1>Contact messages</h1>
  <table style="width:100%;border-collapse:collapse">
    <thead><tr><th>ID</th><th>Name</th><th>Email</th><th>Message</th><th>Status</th><th>Received</th><th>Action</th></tr></thead>
    <tbody>
      <% contacts.forEach(function(c){ %>
        <tr style="border-top:1px solid #eee">
          <td><%= c.id %></td>
          <td><%= c.name %></td>
          <td><%= c.email %></td>
          <td style="max-width:360px"><%= c.message %></td>
          <td><%= c.status %></td>
          <td><%= c.created_at %></td>
          <td>
            <form method="post" action="/admin/contacts/<%= c.id %>/status" style="display:inline">
              <select name="status"><option value="read">read</option><option value="new">new</option><option value="closed">closed</option></select>
              <button class="btn" type="submit">Set</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>
